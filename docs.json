{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Rubic Documentation",
  "colors": {
    "primary": "#00e28e",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "OLD API DOCS",
        "openapi": "https://api-v2.rubic.exchange/api/routes/swagger-json"
      },
      {
        "tab": "API Documentation",
        "openapi": "https://api-v2.rubic.exchange/api/routes/swagger-json",
        "groups": [
          {
            "group": "About",
            "pages": [
              "api-docs/about/overview",
              "api-docs/about/referrer",
              {
                "group": "Monetization",
                "expanded": false,
                "pages": [
                  "api-docs/about/monetization/overview",
                  "api-docs/about/monetization/evm",
                  "api-docs/about/monetization/non-evm"
                ]
              }
            ]
          },
          {
            "group": "Router",
            "pages": [
              {
                "group": "Request quote",
                "expanded": true,
                "pages": [
                  "POST /api/routes/quoteAll",
                  "POST /api/routes/quoteBest",
                  "POST /api/routes/quoteDepositTrades"
                ]
              },
              {
                "group": "Get transaction",
                "expanded": true,
                "pages": [
                  "POST /api/routes/swap",
                  "POST /api/routes/swapDepositTrade",
                  "POST /api/routes/swapBest"
                ]
              }
            ]
          },
          {
            "group": "General",
            "pages": [
              "GET /api/tokens",
              "GET /api/info/chains",
              "GET /api/info/providers",
              "GET /api/info/statusExtended",
              {
                "group": "Utility",
                "pages": [
                  "GET /api/utility/healthcheck",
                  "GET /api/utility/allowance",
                  "GET /api/utility/checkApprove",
                  "GET /api/utility/celerRefund",
                  "GET /api/utility/claim",
                  "GET /api/utility/authWalletMessage"
                ]
              }
            ]
          },
          {
            "group": "Integration Examples",
            "pages": [
              "docs/api-docs/integration-examples/swaps-from-evm",
              "docs/api-docs/integration-examples/swaps-from-solana",
              "docs/api-docs/integration-examples/swaps-from-ton",
              "docs/api-docs/integration-examples/swaps-from-tron",
              "docs/api-docs/integration-examples/swaps-from-bitcoin",
              "docs/api-docs/integration-examples/swaps-via-deposit"
            ]
          },
          {
            "group": "Tokens API",
            "pages": [
              "docs/token-api/token-api"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Rubic Application",
          "href": "https://rubic.exchange/",
          "icon": "cube"
        },
        {
          "anchor": "Contact BD Team",
          "href": "https://t.me/RubicPartnership",
          "icon": "comment-dots"
        },
        {
          "anchor": "API Announcements",
          "href": "https://t.me/+lNMUcuqwsZk3MWU6",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "logo/rubic-logo-light.svg",
    "dark": "logo/rubic-logo-dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://t.me/RubicPartnership"
      }
    ],
    "primary": {
      "type": "button",
